{
  "env": { "IS_DEV": true },
  "browserify": {
    "src": "./src/js/router.jsx",
    "extensions":  [".jsx"],
    "dest": "dist/js"
  },
  "browserSync": {
    "baseDir": "./dist"
  },
  "html": {
    "src": "src/index.html",
    "dest": "dist",
    "watch": "src/index.html"
  },
  "images": {
    "src": "src/gfx/**/*.*",
    "dest": "dist/gfx",
    "watch": "src/gfx/**/*.*"
  },
  "less": {
    "src": "src/less/main.less",
    "outputName": "main.min.css",
    "dest": "dist/css",
    "watch": "src/less/**/*.less"
  },
  "react": {
    "src": "src/js/**/*.jsx",
    "dest": "src/js",
    "watch": "src/js/**/*.jsx"
  }
}
