{
  "env": { "IS_DEV": true },
  "browserify": {
    "src": "./src/js/router.js",
    "fileName": "main.min.js",
    "packageJSON": "../package.json",
    "dest": "dist/js",
    "watch": "src/js/**/*.js"
  },
  "browserSync": {
    "baseDir": "./dist"
  },
  "html": {
    "src": "src/index.html",
    "dest": "dist",
    "watch": "src/index.html"
  },
  "less": {
    "src": "src/less/main.less",
    "fileName": "main.min.css",
    "dest": "dist/css",
    "watch": "src/less/**/*.less"
  },
  "react": {
    "src": "src/js/**/*.jsx",
    "dest": "src/js",
    "watch": "src/js/**/*.jsx"
  }
}
